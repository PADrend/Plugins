// fs
#ifdef SG_FRAGMENT_SHADER

in VertexData {
	vec4 position_hcs;
	vec3 normal_cs;
	vec4 color;
  float pointSize;
} v_in;

layout(location = 0) out vec4 fragColor;

void main() {
  vec3 position_cs = v_in.position_hcs.xyz / v_in.position_hcs.w;
  vec3 normal_cs = normalize(v_in.normal_cs);
  vec4 color = v_in.color;
  
	fragColor = color;
}

#endif
